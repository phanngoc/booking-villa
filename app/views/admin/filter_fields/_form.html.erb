<%= form_with(model: [:admin, filter_field], class: "space-y-6") do |f| %>
  <% if filter_field.errors.any? %>
    <div class="bg-red-50 p-4 rounded-md">
      <div class="text-sm text-red-700">
        <h2><%= pluralize(filter_field.errors.count, "error") %> prohibited this filter field from being saved:</h2>
        <ul class="list-disc pl-5 mt-2">
          <% filter_field.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Tên", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :key_query, "Key Query", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :key_query, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">Chỉ cho phép chữ thường, số và dấu gạch dưới. Ví dụ: price_range, number_of_rooms</p>
  </div>

  <div>
    <%= f.label :column_name, "Column Name", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :column_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">Tên cột trong database. Chỉ cho phép chữ thường, số và dấu gạch dưới. Ví dụ: price, bedrooms</p>
  </div>

  <div>
    <%= f.label :field_type, "Loại", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :field_type, FilterField.field_types.keys.map { |type| [type.titleize, type] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :options, "Tùy chọn (phân cách bằng dấu phẩy)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :options, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", rows: 3 %>
    <p class="mt-2 text-sm text-gray-500">Ví dụ: Tùy chọn 1, Tùy chọn 2, Tùy chọn 3</p>
  </div>

  <div>
    <%= f.label :position, "Vị trí", class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :position, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="flex items-center">
    <%= f.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= f.label :active, "Hoạt động", class: "ml-2 block text-sm text-gray-900" %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Hủy", admin_filter_fields_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= f.submit "Lưu", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %> 