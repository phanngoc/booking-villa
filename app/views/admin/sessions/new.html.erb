<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 class="text-center mb-0">Đăng nhập hệ thống quản trị</h3>
        </div>
        <div class="card-body p-4">
          <%= form_tag admin_session_path do %>
            <div class="mb-3">
              <%= label_tag :email, "Email", class: "form-label" %>
              <%= email_field_tag :email, nil, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="mb-3">
              <%= label_tag :password, "Mật khẩu", class: "form-label" %>
              <%= password_field_tag :password, nil, class: "form-control", autocomplete: "current-password" %>
            </div>

            <div class="mb-3 form-check">
              <%= check_box_tag :remember_me, '1', false, class: "form-check-input" %>
              <%= label_tag :remember_me, "Ghi nhớ đăng nhập", class: "form-check-label" %>
            </div>

            <div class="d-grid gap-2">
              <%= submit_tag "Đăng nhập", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
          
          <div class="mt-3 text-center">
            <%= link_to "Quay lại trang chủ", root_path, class: "btn btn-outline-secondary mt-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 