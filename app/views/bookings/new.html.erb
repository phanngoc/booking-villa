<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">Đặt phòng <%= @villa.name %></h1>

      <%= form_with(model: [@villa, @booking], local: true, class: "space-y-6") do |f| %>
        <% if @booking.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Có <%= pluralize(@booking.errors.count, "lỗi") %> cần sửa:</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @booking.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <div class="flex justify-between">
            <div class="w-1/2 pr-2">
              <%= f.label :check_in, "Ngày nhận phòng", class: "block text-sm font-medium text-gray-700" %>
              <%= f.date_field :check_in, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: Date.current %>
            </div>
            <div class="w-1/2 pl-2">
              <%= f.label :check_out, "Ngày trả phòng", class: "block text-sm font-medium text-gray-700" %>
              <%= f.date_field :check_out, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", min: Date.current %>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-md">
          <div class="flex justify-between items-center">
            <div>
              <p class="text-sm text-gray-500">Giá mỗi đêm</p>
              <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(@villa.price, unit: "₫", format: "%n %u") %></p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Số khách tối đa</p>
              <p class="text-lg font-semibold text-gray-900"><%= @villa.max_guests %> người</p>
            </div>
          </div>
        </div>

        <!-- Phương thức thanh toán -->
        <div class="border border-gray-200 rounded-md p-4">
          <h3 class="text-lg font-medium text-gray-900 mb-3">Phương thức thanh toán</h3>
          
          <%= f.fields_for :payment_attributes do |payment_form| %>
            <div class="space-y-4">
              <div class="flex items-center">
                <%= payment_form.radio_button :payment_method, "sol_wallet", class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
                <label for="booking_payment_attributes_payment_method_sol_wallet" class="ml-3 block">
                  <span class="text-sm font-medium text-gray-700">Thanh toán ngay bằng SOL Wallet</span>
                  <span class="block text-xs text-gray-500">Thanh toán ngay bằng Solana blockchain</span>
                </label>
              </div>
              
              <div class="flex items-center">
                <%= payment_form.radio_button :payment_method, "cash", class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300", checked: true %>
                <label for="booking_payment_attributes_payment_method_cash" class="ml-3 block">
                  <span class="text-sm font-medium text-gray-700">Thanh toán khi nhận phòng</span>
                  <span class="block text-xs text-gray-500">Thanh toán trực tiếp tại villa</span>
                </label>
              </div>
              
              <%= payment_form.hidden_field :status, value: "pending" %>
              <%= payment_form.hidden_field :amount, value: @villa.price * 2 %>
            </div>

            <!-- Hiển thị các thông tin SOL wallet nếu chọn phương thức này -->
            <div id="sol_wallet_info" class="mt-4 p-3 bg-blue-50 rounded-md hidden">
              <div class="flex items-center">
                <img src="https://solana.com/src/img/branding/solanaLogoMark.svg" class="h-5 w-5 mr-2" alt="Solana Logo">
                <span class="text-sm font-medium text-gray-700">Cổng thanh toán Solana</span>
              </div>
              <p class="text-xs text-gray-500 mt-1">Sau khi xác nhận đặt phòng, bạn sẽ được chuyển đến trang thanh toán SOL</p>
            </div>
          <% end %>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Hủy", villa_path(@villa), class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= f.submit "Đặt phòng", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const solWalletRadio = document.getElementById('booking_payment_attributes_payment_method_sol_wallet');
    const cashRadio = document.getElementById('booking_payment_attributes_payment_method_cash');
    const solWalletInfo = document.getElementById('sol_wallet_info');
    
    function toggleSolWalletInfo() {
      if (solWalletRadio.checked) {
        solWalletInfo.classList.remove('hidden');
      } else {
        solWalletInfo.classList.add('hidden');
      }
    }
    
    solWalletRadio.addEventListener('change', toggleSolWalletInfo);
    cashRadio.addEventListener('change', toggleSolWalletInfo);
    
    // Kiểm tra trạng thái ban đầu
    toggleSolWalletInfo();
  });
</script> 