<div class="bg-white p-4 rounded-lg shadow mb-6">
  <h2 class="text-lg font-semibold mb-4">Bộ lọc tìm kiếm</h2>
  
  <%= form_with(url: villas_path, method: :get, class: "space-y-4", data: { turbo_frame: "villas_list" }) do |f| %>
    <% FilterField.active.ordered.each do |field| %>
      <div class="form-group">
        <%= label_tag field.key_query, field.name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        
        <% case field.field_type %>
        <% when 'text_field' %>
          <%= text_field_tag field.key_query, params[field.key_query], 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        
        <% when 'number_field' %>
          <%= number_field_tag field.key_query, params[field.key_query],
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        
        <% when 'dropdown' %>
          <%= select_tag field.key_query,
              options_for_select(field.options_array, params[field.key_query]),
              prompt: "Chọn #{field.name.downcase}",
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        
        <% when 'range_field' %>
          <div class="flex space-x-2">
            <%= number_field_tag "#{field.key_query}_min", params["#{field.key_query}_min"],
                placeholder: "Từ",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            <%= number_field_tag "#{field.key_query}_max", params["#{field.key_query}_max"],
                placeholder: "Đến",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
        
        <% when 'checkbox_group' %>
          <div class="space-y-2">
            <% field.options_array.each do |option| %>
              <div class="flex items-center">
                <%= check_box_tag "#{field.key_query}[]", option, 
                    params[field.key_query]&.include?(option),
                    class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                <%= label_tag "#{field.key_query}_#{option.parameterize}", option, 
                    class: "ml-2 block text-sm text-gray-900" %>
              </div>
            <% end %>
          </div>
        
        <% when 'radio_group' %>
          <div class="space-y-2">
            <% field.options_array.each do |option| %>
              <div class="flex items-center">
                <%= radio_button_tag field.key_query, option, 
                    params[field.key_query] == option,
                    class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
                <%= label_tag "#{field.key_query}_#{option.parameterize}", option, 
                    class: "ml-2 block text-sm text-gray-900" %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="flex justify-end space-x-3 pt-4">
      <%= link_to "Đặt lại", villas_path, 
          class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      <%= f.submit "Áp dụng", 
          class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
  <% end %>
</div> 